<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    mapbox:umanoDragView="@id/dragview"
    mapbox:umanoScrollableView="@id/listView"
    mapbox:umanoPanelHeight="50dp"
    mapbox:umanoOverlay="false"
    mapbox:umanoParallaxOffset="100dp"
    mapbox:umanoShadowHeight="40dp"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraZoom="20"
            />

        <LinearLayout
            android:id="@+id/floor_level_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/mapboxBlue"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/fifth_level_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:text="5"
                android:textColor="@color/mapboxWhite" />

            <Button
                android:id="@+id/fourth_level_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:text="4"
                android:textColor="@color/mapboxWhite" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/poicard"
            android:layout_alignBottom="@id/mapView"
            android:background="@color/mapboxWhite"
            android:visibility="gone">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sample"
                android:textAlignment="center"
                android:textSize="80px"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:id="@+id/description"
                android:textAlignment="center"
                android:text="sample des"
                android:textSize="70px"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Navigation"
                android:id="@+id/poinavigatebutton"/>

        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/dragview"
        android:clickable="true"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="70px"
                android:layout_weight="1"
                android:id="@+id/arrow"
                android:textStyle="bold"
                android:text="^"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/arrowText"
                android:layout_weight="1"
                android:textSize="40px"
                android:layout_marginBottom="30px"
                android:textStyle="bold"
                android:text="Directory"/>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/listView">

        </ListView>
    </LinearLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>